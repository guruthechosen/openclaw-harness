{
  "id": "harness-guard",
  "name": "MoltBot Harness Guard",
  "description": "Intercepts exec tool calls and blocks dangerous commands based on MoltBot Harness rules",
  "version": "0.1.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": {
        "type": "boolean",
        "default": true
      },
      "apiUrl": {
        "type": "string",
        "default": "http://localhost:8380"
      },
      "blockDangerous": {
        "type": "boolean",
        "default": true
      },
      "alertOnly": {
        "type": "boolean",
        "default": false
      },
      "cacheTtlSeconds": {
        "type": "number",
        "default": 30
      },
      "telegramBotToken": {
        "type": "string"
      },
      "telegramChatId": {
        "type": "string"
      }
    }
  },
  "uiHints": {
    "enabled": { "label": "Enable Guard" },
    "apiUrl": { "label": "MoltBot Harness API URL", "placeholder": "http://localhost:8380" },
    "blockDangerous": { "label": "Block Dangerous Commands" },
    "alertOnly": { "label": "Alert Only (no blocking)" },
    "cacheTtlSeconds": { "label": "Rule Cache TTL (seconds)", "placeholder": "30" },
    "telegramBotToken": { "label": "Telegram Bot Token (optional)", "sensitive": true },
    "telegramChatId": { "label": "Telegram Chat ID (optional)" }
  }
}
